<div class="card">
  <div class="card-top">
    {% if mod.icone %}
      <img src="{{ mod.icone }}" alt="Ícone de {{ mod.nome }}" class="mod-icon" />
    {% endif %}
    <h3>{{ mod.nome }}</h3>
  </div>

  {% if mod.categorias.length %}
    <p class="tags">
      {% for cat in mod.categorias %}
        <span class="badge">{{ cat | categoriaBonita }}</span>
      {% endfor %}
    </p>
  {% endif %}

  {% if mod.descricao %}
    <p class="descricao">{{ mod.descricao }}</p>
  {% endif %}

  <div class="card-footer {% if mostrarRepositorio != false and mod.repo %}duplo{% endif %}">
    <a
      class="card-button{% if not (mostrarRepositorio != false and mod.repo) %} full{% else %} left{% endif %}"
      href="https://modrinth.com/mod/{{ mod.slug }}"
      target="_blank"
      rel="noopener noreferrer"
    >Download</a>

    {% if mostrarRepositorio != false and mod.repo %}
      <a
        class="card-button right"
        href="{{ mod.repo }}"
        target="_blank"
        rel="noopener noreferrer"
      >Repositório</a>
    {% endif %}
  </div>
</div>
